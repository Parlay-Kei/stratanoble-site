    {
        "id": "fmt",
        "type": "function",
        "z": "7a54daefb9056b5b",
        "name": "Format message",
        "func": "let b = msg.payload;\nif (typeof b === 'string') { try { b = JSON.parse(b); } catch(e) {} }\n\nconst name = b?.monitor?.name ?? b?.monitorName ?? 'unknown-monitor';\nconst status = String(b?.status ?? b?.msg ?? 'status-change');\n\nconst critical = /DOWN|CRIT|FAIL/i.test(status);\n\n// ntfy headers: title, priority, tag, 24h TTL\nmsg.headers = {\n  'Content-Type': 'text/plain',\n  'X-Title': `Uptime: ${name}`,\n  'X-Priority': critical ? '5' : '3',\n  'X-Tag': critical ? 'rotating_light' : 'white_check_mark',\n  'X-Message-TTL': '86400'\n};\n\nmsg.payload = `${name}: ${status}`;\nreturn msg;\n",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
