{
  "name": "strata-noble",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@strata-noble/website",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=@strata-noble/website",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces",
    "clean": "npm run clean --workspaces && Remove-Item -Recurse -Force node_modules dist .next -ErrorAction SilentlyContinue",
    "format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
    "db:start": "cd infra/supabase && supabase start",
    "db:stop": "cd infra/supabase && supabase stop",
    "db:reset": "cd infra/supabase && supabase db reset",
    "db:diff": "cd infra/supabase && supabase db diff -f",
    "db:push": "cd infra/supabase && supabase db push",
    "db:new": "cd infra/supabase && supabase migration new"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/d3": "^7.4.3",
    "@types/d3-color": "^3.1.3",
    "@types/d3-ease": "^3.0.2",
    "@types/d3-path": "^3.1.1",
    "@types/d3-time": "^3.0.4",
    "@types/d3-timer": "^3.0.2",
    "@types/estree": "^1.0.8",
    "@types/jsdom": "^21.1.7",
    "@types/json-schema": "^7.0.15",
    "@types/json5": "^0.0.30",
    "@types/mailchimp__mailchimp_marketing": "^3.0.21",
    "@types/mysql": "^2.15.27",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/phoenix": "^1.6.6",
    "@types/tedious": "^4.0.14",
    "@types/trusted-types": "^2.0.7",
    "@types/use-sync-external-store": "^1.5.0",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "@types/yargs-parser": "^21.0.3",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "next": "15.5.2",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "5.9.2"
  },
  "overrides": {
    "next": "15.5.2",
    "eslint-config-next": "15.5.2"
  }
}
