{
  "name": "strata-noble",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter @strata-noble/website run dev",
    "build": "pnpm --recursive run build",
    "start": "pnpm --filter @strata-noble/website run start",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "type-check": "pnpm --recursive run type-check",
    "test": "pnpm --recursive run test",
    "test:ci": "pnpm --recursive run test:ci",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next",
    "format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
    "db:start": "cd infra/supabase && supabase start",
    "db:stop": "cd infra/supabase && supabase stop",
    "db:reset": "cd infra/supabase && supabase db reset",
    "db:diff": "cd infra/supabase && supabase db diff -f",
    "db:push": "cd infra/supabase && supabase db push",
    "db:new": "cd infra/supabase && supabase migration new"
  },
  "devDependencies": {
    "eslint-config-next": "15.5.0",
    "next": "15.5.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "overrides": {
    "next": "15.5.0",
    "eslint-config-next": "15.5.0"
  },
  "pnpm": {
    "overrides": {
      "next": "15.5.0",
      "eslint-config-next": "15.5.0"
    }
  }
}